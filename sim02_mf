CC = gcc
DEBUG = -g
CFLAGS = -Wall -std=c99 -pedantic -c $(DEBUG) -pthread
LFLAGS = -Wall -std=c99 -pedantic $(DEBUG) -pthread -o
PROG_O_DEPS = main.o dataStructures.o errors.o fileUtils.o logger.o mathUtils.o simulator.o strUtils.o timer.o
PROG_H_DEPS = booleans.h dataStructures.h errors.h fileUtils.h logger.h mathUtils.h simulator.h strUtils.h timer.h
SIM_NAME = sim02

sim0x: $(PROG_O_DEPS) $(PROG_H_DEPS)
	$(CC) $(LFLAGS) $(SIM_NAME) $(PROG_O_DEPS)

main.o: main.c booleans.h dataStructures.h errors.h fileUtils.h strUtils.h simulator.h logger.h timer.h
	$(CC) $(CFLAGS) main.c

dataStructures.o: dataStructures.h booleans.h errors.h strUtils.h
	$(CC) $(CFLAGS) dataStructures.c

errors.o: errors.c errors.h
	$(CC) $(CFLAGS) errors.c

fileUtils.o: fileUtils.c fileUtils.h strUtils.h booleans.h dataStructures.h errors.h
	$(CC) $(CFLAGS) fileUtils.c

logger.o: logger.c logger.h dataStructures.h errors.h strUtils.h
	$(CC) $(CFLAGS) logger.c

mathUtils.o: mathUtils.c mathUtils.h
	$(CC) $(CFLAGS) mathUtils.c

simulator.o: simulator.c simulator.h dataStructures.h
	$(CC) $(CFLAGS) simulator.c

strUtils.o: strUtils.c strUtils.h booleans.h mathUtils.h errors.h
	$(CC) $(CFLAGS) strUtils.c

timer.o: timer.c timer.h
	$(CC) $(CFLAGS) timer.c


clean:
	\rm *.o $(SIM_NAME)